<configuration>
  <appender name="TEST-UDP" class="org.paggarwal.syslogappender.SyslogAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <pattern>%date %-5level %logger{35} - %message%n</pattern>
    </layout>

    <syslogConfig class="org.paggarwal.syslogappender.SyslogConfig">
      <host>localhost</host>
      <port>45553</port>
      <programName>syslog-test</programName>
      <protocol>UDP</protocol>
    </syslogConfig>
  </appender>

  <root level="DEBUG">
    <appender-ref ref="TEST-UDP" />
  </root>
</configuration>
