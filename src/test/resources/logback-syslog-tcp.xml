<configuration>
  <appender name="TEST-TCP" class="com.github.serioussam.syslogappender.SyslogAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <pattern>%date %-5level %logger{35} - %message%n</pattern>
    </layout>

    <syslogConfig class="com.github.serioussam.syslogappender.SyslogConfig">
      <host>localhost</host>
      <port>45553</port>
      <programName>syslog-test</programName>
      <protocol>TCP</protocol>
    </syslogConfig>
  </appender>

  <root level="DEBUG">
    <appender-ref ref="TEST-TCP" />
  </root>
</configuration>
